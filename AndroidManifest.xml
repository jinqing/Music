<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.music"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.example.music.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.music.MusicActivity"
            android:label="@string/title_activity_music" >
        </activity>
        <activity android:name="com.example.music.fregament.Myfregament" />
        <activity
            android:name="com.example.music.fregament.Tuijianfragment"
            android:label="@string/title_activity_tuijian" >
        </activity>
        <activity
            android:name="com.example.music.fregament.Paihangfragment"
            android:label="@string/title_activity_paihangfragment" >
        </activity>
        <activity
            android:name="com.example.music.fregament.Fenleifragment"
            android:label="@string/title_activity_fenleifragment" >
        </activity>
        <activity
            android:name="com.example.music.MusicListActivity"
            android:label="@string/title_activity_music_list" >
        </activity>
        <service android:name="com.example.music.service.MusicService"></service>
    </application>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
</manifest>
